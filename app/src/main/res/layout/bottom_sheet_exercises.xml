<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:textColor="@color/on_surface"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Select an exercise to add to your workout"
        android:textColor="@color/on_surface_variant"
        android:textSize="14sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="All" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_chest"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_back"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_shoulders"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulders" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_arms"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_legs"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_core"
                style="@style/MuscleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Core" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_surface_variant"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No exercises available.\nCreate one above to get started."
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercises_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp" />

</LinearLayout>
